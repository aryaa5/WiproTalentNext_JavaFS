/**
 * Program M2: Checks if a given integer is odd or even.
 */
public class OddEvenCheck {

    public static void main(String[] args) {
        
        if (args.length != 1) {
            System.out.println("Usage: java OddEvenCheck <integer>");
            return;
        }

        try {
            int number = Integer.parseInt(args[0]);

            // Check if the remainder when divided by 2 is 0
            if (number % 2 == 0) {
                System.out.println(number + " is Even.");
            } else { // The remainder is 1 (or -1 for negative odd numbers), so it's odd
                System.out.println(number + " is Odd.");
            }

        } catch (NumberFormatException e) {
            System.out.println("Error: Input must be a valid integer.");
        }
    }
}
